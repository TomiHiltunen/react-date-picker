@import '../../utils.styl'
@import './constants.styl'

.date-picker
  overflow hidden
  background background-color
  font-size $dp-datepicker-font-size
  width $dp-datepicker-width
  height $dp-datepicker-height
  border $dp-datepicker-border-width $dp-datepicker-border-style $dp-datepicker-border-color
  border-radius $dp-datepicker-border-radius


.dp-header
    background $dp-datepicker-header-background
    padding-bottom $dp-datepicker-header-padding = 8px

    .dp-cell
      color $dp-datepicker-header-color
      border-radius $dp-datepicker-border-radius
      &:hover
        background $dp-datepicker-header-background-hover

  .dp-table
    border-color $dp-datepicker-border-color

    .dp-row
      border-top $dp-datepicker-row-border-width
      border-color $dp-datepicker-row-border-color
      border-width $dp-datepicker-border-width
 
      &.dp-week-day-names
        color $dp-datepicker-week-day-names-color
        background $dp-datepicker-week-day-names-background
        border-bottom $dp-datepicker-week-day-names-border-width
        border-style $dp-datepicker-week-day-names-border-style
        border-top none
        border-right none
        border-left none

      .dp-weeknumber
        color $dp-datepicker-week-day-names-color

    .dp-cell
      padding $dp-datepicker-cell-padding
      background $dp-datepicker-day-bg
      border-radius $dp-datepicker-day-border-radius
      margin $dp-datepicker-day-margin
      padding $dp-datepicker-day-padding

      &:not(:first-child)
        border-left-width $dp-datepicker-cell-border-width 
        border-left-style $dp-datepicker-cell-border-style 
        border-left-color $dp-datepicker-cell-border-color

      &.dp-prev
      &.dp-next
        color $dp-datepicker-day-other-month-color
        background $dp-datepicker-day-other-month-bg
        &:hover
          color $dp-datepicker-today-color

      &:hover
        font-weight $dp-datepicker-cell-over-font-weight
        background $dp-datepicker-cell-over-background

      &.dp-disabled
        cursor default
        color $dp-datepicker-day-disabled-color
        background $dp-datepicker-day-disabled-bg

      &.dp-value
        color $dp-datepicker-value-color
        font-weight $dp-datepicker-value-font-weight
        background $dp-datepicker-value-bg

      &.dp-current
        font-weight $dp-datepicker-today-font-weight
        color $dp-datepicker-today-color

      &.dp-in-range
        background $dp-datepicker-value-selected-range-bg

      &.dp-month
        ellipsis true

      &.dp-week-day-name
        cursor default
        background inherit
        border $dp-datepicker-week-day-name-border

  .dp-footer
    padding 3px
    justify-content center
    border-width 0
    border-top $dp-datepicker-inside-border-color
    border-style $dp-datepicker-border-style = solid
    border-top-width $dp-datepicker-border-width

    .dp-footer-selected
      color $dp-datepicker-footer-color
      padding 5px 15px
      border-width 1px
      cursor pointer
      outline none

      &:hover
        background-color $dp-datepicker-footer-background-hover-color

    .dp-footer-today
      color $dp-datepicker-footer-color
      padding 5px 15px
      border-width 1px
      cursor pointer
      outline none

      &:hover
        background-color $dp-datepicker-footer-background-hover-color

  .dp-body
    overflow hidden

  .dp-cell
    outline none

  .dp-day
    cursor pointer
    color $dp-datepicker-day-color
    outline none

    &:hover
      color $dp-datepicker-day-hover-color

  .dp-weekend.dp-weekend-highlight
    color $dp-datepicker-weekend-highlight-color
  .dp-weekend.dp-weekend-highlight:hover
    color $dp-datepicker-weekend-hover-color
  .dp-weekend.dp-weekend-highlight.dp-value
    color $dp-datepicker-weekend-highlight-value-color
  .dp-weekend.dp-weekend-highlight.dp-value:hover
    color $dp-datepicker-weekend-hover-color

  .dp-nav-view
  .dp-nav-cell
  .dp-week-day-name
    ellipsis true
    unselectable true

  .dp-nav-view
  .dp-nav-cell
    cursor pointer

  .dp-nav-table .dp-nav-cell.dp-cell
    border $dp-datepicker-header-cell-border
    padding 0
    margin-top 5px
    width 0
    height 0
    &.dp-prev-nav
      border-right-color $dp-datepicker-nav-bg
      &:hover
        border-right-color $dp-datepicker-nav-over-bg
    &.dp-next-nav
      border-left-color $dp-datepicker-nav-bg
      &:hover
        border-left-color $dp-datepicker-nav-over-bg


  .dp-nav-view
    background $dp-datepicker-month-name-bg
    &:hover
      background $dp-datepicker-month-name-over-bg

  .dp-nav-table
    .dp-cell
      padding $dp-datepicker-header-padding
      font-weight bold
    .dp-nav-cell
      flex 0
      unselectable true

  .dp-decade-view
  .dp-year-view
  .dp-month-view
    unselectable true
